    <title>ZaZ 965</title>
    <style>
            
            
            #chatForm {width: 100%;padding: 3px; margin-top: 10px;}
            #m { border: 0; padding: 10px; min-width:85%; margin-right: .5%; border-radius: 5px;}
            #formbtn { padding: 10px; border-radius: 5px; }
            #messages { list-style-type: none; margin: 0; padding: 0; }
            #messages li { padding: 5px 10px; }
            
        </style>


</head>
<body>
        <script src="/public/js/vue.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

    <%include blocks/header.ejs%>

<br><br>
<aside id="box" v-show="show"  transition="slide" class="boxx" style="background-image: url(http://aslania.com/wp-content/uploads/2018/03/black-background-wallpaper-4.jpg)"> 
    <ul id="messages"></ul>
    

    <form action="" id='chatForm'>
        <input id="m" autocomplete="off" autofocus /><button id="formbtn" class="btn-outline-success">Отправить</button>
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.js"></script>
    <script>
        $(function () {
            var socket = io();
            $('form').submit(function(){
                socket.emit('chat message', $('#m').val());
                $('#m').val('');
                return false;
            });
            socket.on('chat message', function(msg){
                $('#messages').append($('<li>').text(msg));
            });
        });
    </script>
  </aside>
<br>

